# ============================================
# üîê Django Security Settings
# ============================================
# Generate a new secret key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=YOUR_DJANGO_SECRET_KEY_HERE

# Debug mode (True/False)
DEBUG=True

# Comma-separated values
ALLOWED_HOSTS=127.0.0.1,localhost


# ============================================
# üìß SMTP Email Settings (Used for sending emails)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Gmail email account used to send campaign mails
EMAIL_HOST_USER=your_email@gmail.com

# Gmail App Password (not regular password)
EMAIL_HOST_PASSWORD=your_app_password_here

# Default sender email
DEFAULT_FROM_EMAIL=your_email@gmail.com


# ============================================
# üì© IMAP Settings (Used for Bounce Processing)
# ============================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=True

# Same Gmail email (recommended, but can be different)
IMAP_USERNAME=your_email@gmail.com
IMAP_PASSWORD=your_app_password_here


# ============================================
# üë®‚Äçüíº Admin Report Email
# ============================================
# All bounce/error reports will be sent here
ADMIN_REPORT_EMAIL=admin_reports@example.com


# ============================================
# üåç Timezone
# ============================================
TIME_ZONE=Asia/Kolkata


# ============================================
# üì® Celery Configuration
# ============================================
# For development:
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=cache+memory://

# For production:
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1


# ============================================
# üóÑÔ∏è Database (Optional - for production)
# ============================================
# DATABASE_URL=postgres://username:password@localhost:5432/dbname
